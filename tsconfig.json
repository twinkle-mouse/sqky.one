{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "paths": {
            "$assets/*": ["./src/assets/*"],
            "$components/*": ["./src/components/*"],
            "$layouts/*": ["./src/layouts/*"],
            "$common/*": ["./src/pages/*"],
            "$lib/*": ["./src/lib/*"]
        }
    }
}
