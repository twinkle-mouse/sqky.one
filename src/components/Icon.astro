---
import Picture, { type Props as P } from "$components/Picture.astro";

export type Props = P;

const props = Astro.props;
---

<Picture
    {...props}
    pictureAttributes={{
        ...props.pictureAttributes,
        class: "icon",
    }}
    alt=""
/>

<style>
    .icon,
    .icon > img {
        display: inline-block;
        width: auto;
        height: 1.25em;
    }

    .icon {
        vertical-align: sub;
    }
</style>
